{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "ignorePatterns": [".next", ".eslintrc.json"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": "warn",
    "@next/next/no-img-element": "off"
  }
}
